---
import { Content as AboutContent, frontmatter as about } from '../content/About.md';
import { frontmatter as reel } from '../content/Reel.md'
import { frontmatter as metadata } from '../data/Meta.md';

import VimeoPlayer from '../components/VimeoPlayer.astro'
import ScrollButton from '../components/ScrollButton.astro'
import Button from '../components/Button.astro'
import Monogram from '../components/Monogram.astro'

import '../styles/global.scss';
---

<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width">
	<meta name="theme-color" content="#000000">
	<title>{metadata.name} Â· {metadata.title}</title>

	<!-- <link rel="icon" href="/favicon.ico" type="image/x-icon" /> -->
	<link rel="icon" href="/favicon.svg" type="image/svg+xml">
	<link rel="apple-touch-icon" href="/apple-touch-icon.png">
</head>

<body class="home">
	<div class="initial-view">
		<header>
			<h1>{metadata.name}</h1>
			<h2>{metadata.title}</h2>
		</header>

		<div class="bleed">
			<VimeoPlayer id={reel.vimeo_id} />
		</div>

		<div class="align-r" style="padding-top: 1rem;">
			<ScrollButton targetId="about" />
		</div>
	</div>

	<main>
		<article id="about">
			<h3>{about.title}</h3>

			<div class="bleed-r">
				<img src={about.image.url} alt={about.image.alt} class="portrait">
			</div>

			<div class="contact">
				<Button 
					href={`mailto:${about.email_button.address}`}
					label={about.email_button.label}
				/>

				<nav class="social">
					{about.social_links.map(service => (
						<a href={service.url}>{service.label}</a>
					))}
				</nav>
			</div>

			<AboutContent />
		</article>
	</main>

	<footer>
		<Monogram />
		<p>&copy; {metadata.name}</p>
	</footer>
	
	<script src="https://player.vimeo.com/api/player.js"></script>
</body>
</html>
