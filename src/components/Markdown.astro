---
import { marked } from 'marked'

export interface Props {
  content: string
  inline?: boolean // to render without enclosing tags
  smartypants?: boolean
}

const { content, inline = false, smartypants = true } = Astro.props as Props
const opts = { smartypants }
---

<Fragment
  set:html={
    inline
      ? marked.parseInline(content, opts)
      : marked(content, opts)
  }
/>
