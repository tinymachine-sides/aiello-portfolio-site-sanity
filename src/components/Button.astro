---
// Export a "Props" interface to .
export interface Props {
    href: string,
    label: string
}
const { href, label } = Astro.props as Props;
---
<a href={href}>{label}</a>

<style lang="scss">
  a {
    --color-button-border-default: rgba(255, 255, 255, 0.5);
    --color-button-border-hover: rgba(255, 255, 255, 1);
    display: block;
    margin-bottom: 0.5em;
    border: 1px solid var(--color-button-border-default);
    text-decoration: none;
    text-align: center;
    padding: 0.65em 1em;
    transition: all 0.5s;

    &:hover, &:focus {
        border-color: var(--color-button-border-hover);
    }
  }
</style>